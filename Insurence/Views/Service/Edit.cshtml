@model Insurence.Models.DataModels.TblService
@{
    ViewBag.Title = "Hizmet Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Hizmet Düzenle</h4>
                <p class="card-description">Hizmet bilgilerini güncelleyin</p>

                @using (Html.BeginForm("Edit", "Service", FormMethod.Post, new { @class = "forms-sample" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.ServiceId)

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Title, "Başlık (Türkçe)", new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Başlık giriniz" })
                                @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.TitleEN, "Başlık (İngilizce)", new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.TitleEN, new { @class = "form-control", placeholder = "Title" })
                                @Html.ValidationMessageFor(m => m.TitleEN, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Description, "Açıklama (Türkçe)", new { @class = "form-label" })
                                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = "4", placeholder = "Açıklama giriniz" })
                                @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.DescriptionEN, "Açıklama (İngilizce)", new { @class = "form-label" })
                                @Html.TextAreaFor(m => m.DescriptionEN, new { @class = "form-control", rows = "4", placeholder = "Description" })
                                @Html.ValidationMessageFor(m => m.DescriptionEN, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Icon, "İkon Class", new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.Icon, new { @class = "form-control", placeholder = "fa-users" })
                                @Html.ValidationMessageFor(m => m.Icon, "", new { @class = "text-danger" })
                                <small class="form-text text-muted">Örnek: fa-users, fa-hospital, fa-car, fa-home</small>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.ImageUrl, "Görsel URL", new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.ImageUrl, new { @class = "form-control", placeholder = "https://example.com/image.png" })
                                @Html.ValidationMessageFor(m => m.ImageUrl, "", new { @class = "text-danger" })
                                <small class="form-text text-muted">
                                    <a href="/Service/AIImageGenerator" target="_blank" class="text-primary">
                                        <i class="mdi mdi-robot"></i> AI ile görsel oluştur
                                    </a>
                                </small>
                            </div>
                        </div>
                    </div>

                    if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="form-group">
                            <label class="form-label">Mevcut Görsel</label>
                            <div>
                                <img src="@Model.ImageUrl" alt="@Model.Title" style="max-width: 300px; border-radius: 8px; border: 2px solid #ddd;" />
                            </div>
                        </div>
                    }

                    <div class="form-group">
                        <button type="submit" class="btn btn-gradient-primary me-2">
                            <i class="mdi mdi-content-save"></i> Güncelle
                        </button>
                        <a href="/Service/Index" class="btn btn-light">
                            <i class="mdi mdi-arrow-left"></i> İptal
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}