@model List<Insurence.Models.DataModels.TblSSS>
@{
    var isEnglish = Session["Language"] != null && Session["Language"].ToString() == "en";
}

<div class="container-fluid faq-section bg-light py-5">
    <div class="container py-5">
        <div class="row g-5 align-items-center">
            <div class="col-xl-6 wow fadeInLeft" data-wow-delay="0.2s">
                <div class="h-100">
                    <div class="mb-5">
                        <h4 class="text-primary">
                            @(isEnglish ? "Frequently Asked Questions" : "Sıkça Sorulan Sorular")
                        </h4>
                        <h1 class="display-4 mb-0">
                            @(isEnglish ? "Common Questions" : "Merak Edilenler")
                        </h1>
                    </div>
                    <div class="accordion" id="accordionExample">
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            var item = Model[i];
                            var collapseId = "collapse" + i;
                            var headingId = "heading" + i;
                            var isFirst = i == 0 ? "show active" : "";
                            var isExpanded = i == 0 ? "true" : "false";
                            var buttonClass = i == 0 ? "accordion-button border-0" : "accordion-button collapsed";

                            <div class="accordion-item">
                                <h2 class="accordion-header" id="@headingId">
                                    <button class="@buttonClass" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="@isExpanded" aria-controls="@collapseId">
                                        @(isEnglish ? "Q" : "S"): @(isEnglish ? item.soruEN : item.soru)
                                    </button>
                                </h2>
                                <div id="@collapseId" class="accordion-collapse collapse @isFirst" aria-labelledby="@headingId" data-bs-parent="#accordionExample">
                                    <div class="accordion-body rounded">
                                        @(isEnglish ? "A" : "C"): @(isEnglish ? item.cevapEN : item.cevap)
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-xl-6 wow fadeInRight" data-wow-delay="0.4s">
                <img src="~/LifeSure-1.0.0/img/carousel-2.png" class="img-fluid w-100" alt="@(isEnglish ? "FAQ" : "SSS")">
            </div>
        </div>
    </div>
</div>