@model List<Insurence.Models.DataModels.TblTestimonial>
@{
    var isEnglish = Session["Language"] != null && Session["Language"].ToString() == "en";
}

<div class="container-fluid testimonial pb-5">
    <div class="container pb-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.2s" style="max-width: 800px;">
            <h1 class="display-4 mb-4">
                @(isEnglish ? "What Our Customers Say" : "Müşterilerimizin Söyledikleri")
            </h1>
            <p class="mb-0">
                @(isEnglish
                    ? "Our customers tell our story best. Thanks to the trust we provide, fast service and solution-oriented approach, our many satisfied customers who share their satisfaction with us are our greatest source of motivation."
                    : "Bizi en iyi müşterilerimiz anlatır. Sağladığımız güven, hızlı hizmet ve çözüm odaklı yaklaşım sayesinde memnuniyetlerini bizimle paylaşan birçok müşterimiz, en büyük motivasyon kaynağımızdır.")
            </p>
        </div>
        <div class="owl-carousel testimonial-carousel wow fadeInUp" data-wow-delay="0.2s">
            @foreach (var item in Model)
            {
                <div class="testimonial-item bg-light rounded">
                    <div class="row g-0">
                        <div class="col-4 col-lg-4 col-xl-3">
                            <div class="h-100">
                                <img src="@item.ImageUrl" class="img-fluid h-100 rounded" style="object-fit: cover;" alt="@item.NameSurname">
                            </div>
                        </div>
                        <div class="col-8 col-lg-8 col-xl-9">
                            <div class="d-flex flex-column my-auto text-start p-4">
                                <h4 class="text-dark mb-0">@item.NameSurname</h4>
                                <p class="mb-3">@(isEnglish ? item.ProfessionEN : item.Profession)</p>
                                <div class="d-flex text-primary mb-3">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= item.Rating)
                                        {
                                            <i class="fas fa-star"></i>
                                        }
                                        else
                                        {
                                            <i class="far fa-star"></i>
                                        }
                                    }
                                </div>
                                <p class="mb-0">
                                    @(isEnglish ? item.DescriptionEN : item.Text)
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>