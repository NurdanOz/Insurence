@model List<Insurence.Models.DataModels.TblEmploye>
@{
    var isEnglish = Session["Language"] != null && Session["Language"].ToString() == "en";
}
<div class="container-fluid team pb-5">
    <div class="container pb-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.2s" style="max-width: 800px;">
            <h1 class="display-4 mb-4" data-translate="teamTitle">Uzman Ekip Üyelerimizle Tanışın</h1>
            <p class="mb-0" data-translate="teamDescription">
                Deneyimli ve alanında uzman ekibimizle, ihtiyaçlarınıza en uygun sigorta çözümlerini sunmak için titizlikle çalışıyor, her adımda size güvenli bir hizmet deneyimi yaşatıyoruz.
            </p>
        </div>
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-6 col-xl-3 wow fadeInUp" data-wow-delay="0.2s">
                    <div class="team-item">
                        <div class="team-img">
                            <img src="@item.ImageUrl" class="img-fluid rounded-top w-100" alt="">
                            <div class="team-icon">
                                <a class="btn btn-primary btn-sm-square rounded-pill mb-2" href=""><i class="fab fa-facebook-f"></i></a>
                                <a class="btn btn-primary btn-sm-square rounded-pill mb-2" href=""><i class="fab fa-twitter"></i></a>
                                <a class="btn btn-primary btn-sm-square rounded-pill mb-2" href=""><i class="fab fa-linkedin-in"></i></a>
                                <a class="btn btn-primary btn-sm-square rounded-pill mb-0" href=""><i class="fab fa-instagram"></i></a>
                            </div>
                        </div>
                        <div class="team-title p-4">
                            <h4 class="mb-0">@item.NameSurname</h4>
                            <p class="mb-0">@(isEnglish ? item.PositionEn : item.Profession)</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script>
const teamTranslations = {
    tr: {
        teamTitle: "Uzman Ekip Üyelerimizle Tanışın",
        teamDescription: "Deneyimli ve alanında uzman ekibimizle, ihtiyaçlarınıza en uygun sigorta çözümlerini sunmak için titizlikle çalışıyor, her adımda size güvenli bir hizmet deneyimi yaşatıyoruz."
    },
    en: {
        teamTitle: "Meet Our Expert Team Members",
        teamDescription: "With our experienced and expert team, we work meticulously to offer the most suitable insurance solutions for your needs, providing you with a reliable service experience at every step."
    }
};

function updateTeamContent(lang) {
    document.querySelectorAll('[data-translate]').forEach(element => {
        const key = element.getAttribute('data-translate');
        if (teamTranslations[lang] && teamTranslations[lang][key]) {
            element.textContent = teamTranslations[lang][key];
        }
    });
}

window.updateTeamContent = updateTeamContent;
</script>