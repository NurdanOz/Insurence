@model List<Insurence.Models.DataModels.TblTestimonial>

@{
    ViewBag.Title = "Müşteri Yorumları Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="card-title mb-0">Müşteri Yorumları Listesi</h4>
                    <a href="@Url.Action("Create", "Testimonial")" class="btn btn-gradient-primary btn-fw">
                        <i class="mdi mdi-plus"></i> Yeni Yorum Ekle
                    </a>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Fotoğraf</th>
                                <th>Ad Soyad</th>
                                <th>Meslek</th>
                                <th>Yorum</th>
                                <th>Puan</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Count > 0)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.TestimoniaLId</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                                            {
                                                <img src="@item.ImageUrl" alt="@item.NameSurname" style="width: 50px; height: 50px; border-radius: 50%; object-fit: cover;" />
                                            }
                                            else
                                            {
                                                <img src="~/corona-free-dark-bootstrap-admin-template-1.0.0/template/assets/images/faces/face12.jpg" alt="default" style="width: 50px; height: 50px; border-radius: 50%; object-fit: cover;" />
                                            }
                                        </td>
                                        <td>@item.NameSurname</td>
                                        <td><span class="badge badge-info">@item.Profession</span></td>
                                        <td>@(item.Text?.Length > 60 ? item.Text.Substring(0, 60) + "..." : item.Text)</td>
                                        <td>
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= item.Rating)
                                                {
                                                    <i class="mdi mdi-star text-warning"></i>
                                                }
                                                else
                                                {
                                                    <i class="mdi mdi-star-outline text-muted"></i>
                                                }
                                            }
                                            <span class="badge badge-success ml-1">@item.Rating</span>
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Edit", "Testimonial", new { id = item.TestimoniaLId })" class="btn btn-gradient-success btn-sm btn-icon-text">
                                                <i class="mdi mdi-pencil btn-icon-prepend"></i> Düzenle
                                            </a>
                                            <a href="@Url.Action("Delete", "Testimonial", new { id = item.TestimoniaLId })"
                                               class="btn btn-gradient-danger btn-sm btn-icon-text"
                                               onclick="return confirm('Bu yorumu silmek istediğinize emin misiniz?')">
                                                <i class="mdi mdi-delete btn-icon-prepend"></i> Sil
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center">Henüz müşteri yorumu bulunmamaktadır.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
