        watchVideo: "Watch Video",
        moreInfo: "More information..."
    }
};

function updateHeroContent(lang) {
    document.querySelectorAll('[data-translate]').forEach(element => {
        const key = element.getAttribute('data-translate');
        if (heroTranslations[lang] && heroTranslations[lang][key]) {
            element.textContent = heroTranslations[lang][key];
        }
    });
}

// Sayfa yüklendiğinde dili ayarla
document.addEventListener('DOMContentLoaded', function() {
    const currentLang = localStorage.getItem('selectedLanguage') || 'tr';
    updateHeroContent(currentLang);
});

// Dil değiştiğinde güncelle (global fonksiyon)
window.updateHeroContent = updateHeroContent;
</script>