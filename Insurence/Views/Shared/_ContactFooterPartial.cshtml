        en: {
            footerBrand: "My Insurance",
            footerAboutText: "Our company, which adopts trust, speed and transparency as fundamental principles in insurance, aims to provide the most suitable, comprehensive and flexible solutions to the needs of our individual and corporate customers. With our experienced team and innovative approach, we secure you and your loved ones against all kinds of risks and uncertainties by being with you at every step.",
            footerLinks: "Links",
            footerAbout: "About Us",
            footerFeatures: "Features",
            footerServices: "Services",
            footerEmployees: "Employees",
            footerReferences: "References",
            footerFAQ: "FAQ",
            footerNewsletter: "Newsletter",
            footerNewsletterText: "Subscribe to our newsletter for the latest insurance news, advantageous campaigns and special offers. The easiest way to stay safe is here!",
            footerEmailPlaceholder: "Enter your email",
            footerSubscribe: "Subscribe",
            callExperts: "Call Our Experts"
        }
    };

    function updateFooterContent(lang) {
        document.querySelectorAll('[data-translate]').forEach(element => {
            const key = element.getAttribute('data-translate');
            if (footerTranslations[lang] && footerTranslations[lang][key]) {
                element.textContent = footerTranslations[lang][key];
            }
        });

        // Input placeholder için özel işlem
        const emailInput = document.querySelector('[data-translate-placeholder]');
        if (emailInput) {
            const key = emailInput.getAttribute('data-translate-placeholder');
            if (footerTranslations[lang] && footerTranslations[lang][key]) {
                emailInput.placeholder = footerTranslations[lang][key];
            }
        }
    }

    window.updateFooterContent = updateFooterContent;
</script>