<script>
const navTranslations = {
    tr: {
        brandName: "Sigortacım",
        navHome: "Anasayfa",
        navAbout: "Hakkımızda",
        navServices: "Servisler",
        navEmployees: "Çalışanlar",
        navReferences: "Referanslar",
        navContact: "İletişim",
        navFAQ: "SSS",
        navGetQuote: "Teklif Al",
        callExperts: "Uzmanlarımızı Arayın..."
    },
    en: {
        brandName: "My Insurance",
        navHome: "Home",
        navAbout: "About Us",
        navServices: "Services",
        navEmployees: "Employees",
        navReferences: "References",
        navContact: "Contact",
        navFAQ: "FAQ",
        navGetQuote: "Get Quote",
        callExperts: "Call Our Experts..."
    }
};

function updateNavContent(lang) {
    document.querySelectorAll('[data-translate]').forEach(element => {
        const key = element.getAttribute('data-translate');
        if (navTranslations[lang] && navTranslations[lang][key]) {
            element.textContent = navTranslations[lang][key];
        }
    });
}

window.updateNavContent = updateNavContent;
</script>